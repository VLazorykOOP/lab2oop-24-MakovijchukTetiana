#include <iostream>

int main() {
    int a, b, c, d;

    // Ввід даних з клавіатури
    std::cout << "Введіть значення a, b, c, d: ";
    std::cin >> a >> b >> c >> d;

    // Обчислення з використанням лише побітових операцій
    int result = (b << 10)  // 1024 * b
               + (((((d << 4) - d) + ((a << 3) + (a << 2))) >> 9))  // (15*d + 12*a) / 512
               - ((c << 12) + c)  // 4097 * c
               + ((d << 3) + (d << 2) + d);  // 13 * d

    // Виведення результату
    std::cout << "Значення виразу: " << result << std::endl;

    return 0;
}
